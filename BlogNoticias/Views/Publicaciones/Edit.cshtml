@model BlogNoticias.Models.Publicacion
@{
    ViewBag.Title = "Editar publicación";
}
<h2>Editar publicación</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(model => model.Titulo)
        @Html.TextBoxFor(model => model.Titulo)
        @Html.ValidationMessageFor(model => model.Titulo)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CategoriaId, "Categoría")
        @Html.DropDownList("CategoriaId", null, "Selecciona una categoría")
        @Html.ValidationMessageFor(model => model.CategoriaId)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Contenido)
        @Html.TextAreaFor(model => model.Contenido, new { rows = 10 })
        @Html.ValidationMessageFor(model => model.Contenido)
    </div>
    <input type="submit" value="Guardar" />
    @Html.ActionLink("Cancelar", "Details", new { id = Model.Id }, new { @class = "button secondary" })
}
